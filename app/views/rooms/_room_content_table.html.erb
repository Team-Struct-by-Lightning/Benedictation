<script>
$(function() {
  $( "#drop-spot" ).droppable({

      activeClass: "active-spot",
      hoverClass: "hover-spot",
      drop: function( event, ui ) {
       
        $("#benedict-sidebar-wrapper").append($("#chat-body"));
        //$("#chat-body").animate({left:"+= 50"});

        $("#drop-spot").append( $("#localVideo"));
        $("#localVideo").css("top", "0%");
        $("#localVideo").css("left", "0%");
        $("#localVideo").animate({ width: "100%" });
        $("#localVideo").get(0).play();

        $("#chat-body").animate({ width: "100%" });
        $("#chat-body").animate({ top: "+=120px" }, 400 );
        if($("#video-sidebar").height() < 100){
          $("#video-sidebar").css("height", "200px");
        }
      }
    });
 });
  </script>