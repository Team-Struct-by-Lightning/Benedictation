function tell(evt) {
  if (evt.which === 98 && evt.metaKey) {
        bdown = 1;
        recordSpeech();
        console.log("bdown = ",bdown);
        //Changed setInterval to setTimeout -- maybe cleaner
        setTimeout(function() {
            jQuery.event.trigger({ type : 'keyup', which : 91 });
            return;
        }, 10000);
    }
    else if ((evt.which === 91) && evt.type === "keyup"){
        bdown = 0;
        if( recordSpeech.recording == 1 && trigger_flag == 1) {
            trigger_flag = 0;
            speechRegRec.stop();
            originalText = "Analyzing";
            speechRegRec.exportWAV(function(blob) {
                speechRegRec.clear();
                ws.send(blob);
                console.log("sending blob: ",blob);
                ws.send("stop");    // Tells the server to stop listening and start analyzing
            });
        console.log("bdown = ",bdown);
        }
    }
};

$(document).bind('keydown keypress keyup', tell);